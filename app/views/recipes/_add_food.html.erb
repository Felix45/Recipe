<div class="container">
<div class="card">
  <div class="card-header">
    Recipe Details
  </div>
  <div class="card-body justify-content-start">
    <table class="table table-sm table-striped text-left">
      <tr>
        <td>Food</td>
        <td>Quantity</td>
        <td>Price</td>
        
        <td>Actions</td>
      </tr>
      <% recipe.recipes_foods.each do |food_item| %>
        <tr>
          <td><%= food_item.food.name %></td>
          <td><%= "#{food_item.quantity} #{food_item.food.measurement_unit}" %></td>
          <td><%= "$#{ food_item.quantity * food_item.food.price}" %></td>
          <td class="d-flex">
          <% if can? :update, food_item %>
           <%= link_to 'Modify', edit_recipe_recipes_food_path(recipe.id, food_item.id), method: :patch %>
          <% end %>

           <% if can? :destroy, food_item.food %>
             <%= form_with url: recipe_recipes_food_path(recipe.id, food_item.id), method: :delete, local: true, scope: :recipe_food do |f| %>
               <%= f.hidden_field :recipe_id, {value: recipe.id} %>
               <%= f.hidden_field :quantity, {value: food_item.quantity} %>
               <%= f.hidden_field :food_id, {value: food_item.food_id} %>
               <%= f.submit 'Delete', class: 'mx-2' %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="card-footer text-muted">
    ~Great Food!!~
  </div>
</div>
</div>
