<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label fw-bold", style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :preparation_time, class: "form-label fw-bold", style: "display: block" %>
    <%= form.number_field :preparation_time, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cooking_time, class: "form-label fw-bold", style: "display: block" %>
    <%= form.number_field :cooking_time, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label fw-bold", style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box :public, class: "form-check-input" %>
    <%= form.label :public, class: "form-check-label fw-bold" %>
    
  </div>
  <div class="mb-3">
    <%= form.submit class: "btn btn-primary w-100" %>
  </div>
<% end %>
