<div class="container my-4">
<div class="col-md-6">
  <h3>Edit Ingredient</h3>
    <%= form_with  model: @recipe_food, url: { action: "update"}, local: true, scope: :recipe_food, class:"input-form"  do |f|%>
      <div class="form-group">
        <%= f.select :food_id, current_user.foods.collect {|food| [food.name, food.id]},{ include_blank: true} , class:"custom-select form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.number_field :quantity ,  class:"form-control" , required: true, placeholder: 'quantity',  min: 1%><br>
      </div>
      <%= f.submit "Update", class:"btn btn-sm btn-primary " %>
    <% end %>
  </div>
</div>